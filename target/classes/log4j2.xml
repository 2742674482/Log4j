<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" monitorInterval="1800" schema="Log4J-V2.2.xsd">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">

            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %c %x-%m%n " />
        </Console>

        <File name="RollingFile1" fileName="File/DEBUG1.log" filePattern="Home/Desktop/log4j/project-%d{yyyy-MM-dd}-%i.log.gz">

            <Filters>
                <MarkerFilter marker="arraymarker" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </File>

        <File name="RollingFile2" fileName="File/DEBUG2.log" filePattern="Home/Desktop/log4j/project-%d{yyyy-MM-dd}-%i.log.gz">

            <Filters>
                <MarkerFilter marker="arraymarkerr" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </File>

        <File name="RollingFile3" fileName="File/info.log" filePattern="Home/Desktop/log4j/project-%d{yyyy-MM-dd}-%i.log.gz">

            <Filters>
                <NoMarkerFilter onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </File>

        <File name="RollingFile4" fileName="File/night.log" filePattern="Home/Desktop/log4j/project-%d{yyyy-MM-dd}-%i.log.gz">

            <Filters>
                <TimeFilter start="20:00:00" end="05:00:00" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </File>
    </Appenders>

    <Loggers>

        <root level="info">
            <appender-ref ref="RollingFile1"/>
            <appender-ref ref="RollingFile2"/>
            <appender-ref ref="RollingFile3"/>
            <appender-ref ref="RollingFile4"/>
            <appender-ref ref="Console"/>
        </root>
        
    </Loggers>

</Configuration>